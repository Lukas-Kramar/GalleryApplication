@page
@model GalleryApp.Areas.User.CRUD_StoredFile.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>StoredFile</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StoredFile.Uploader)
        </dt>
          <dd class="col-sm-10">
            @if(Model.StoredFile.Uploader.NickName != null) { @Html.DisplayFor(model => model.StoredFile.Uploader.NickName) }
            else{ @Html.DisplayFor(model => model.StoredFile.Uploader.Email) }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StoredFile.UploadedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StoredFile.UploadedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StoredFile.OriginalName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StoredFile.OriginalName)
        </dd>       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StoredFile.isPublic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StoredFile.isPublic)
        </dd>
    </dl>

    <h3>Picture will be also deleted from these galleries</h3>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GalleryStoredFiles[0].Gallery.Creator)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GalleryStoredFiles[0].Gallery.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GalleryStoredFiles[0].Gallery.Description)
                </th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.GalleryStoredFiles) {
            <tr>
            <td>
                @if(item.Gallery.Creator.NickName != null) { @Html.DisplayFor(modelItem => item.Gallery.Creator.NickName) }
                else{ @Html.DisplayFor(modelItem => item.Gallery.Creator.Email) }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gallery.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gallery.Description)
            </td>
            </tr>
        }
        </tbody>
    </table>    
    <form method="post">
        <input type="hidden" asp-for="StoredFile.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
